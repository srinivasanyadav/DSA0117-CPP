#include <iostream>
using namespace std;

class Book {
    string title;
    float price;

public:
    // Constructor with parameters
    Book(string t, float p) {
        title = t;
        price = p;
    }

    // Copy constructor
    Book(const Book &b) {
        title = b.title;
        price = b.price;
    }

    void display() {
        cout << "Title: " << title << ", Price: " << price << endl;
    }
};

int main() {
    // Create first Book object
    Book b1("C++ Programming", 450.50);

    // Create second Book object by copying b1
    Book b2(b1);

    cout << "Original Book Object: ";
    b1.display();

    cout << "Copied Book Object: ";
    b2.display();

    return 0;
}
